{
  "name": "rulegpt",
  "version": "0.0.1",
  "description": "A bot utilising the OpenAI api to evaluate messages against predefined rules",
  "author": "Snipcola",
  "repository": "https://code.snipcola.st/snipcola/RuleGPT",
  "main": "src/index.js",
  "bin": "src/index.js",
  "license": "MIT",
  "pkg": {
    "assets": [
      "src/commands/*",
      "src/events/*",
      "src/lib/*"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
      "node18-mac-x64"
    ]
  },
  "scripts": {
    "start": "node .",
    "dev": "yarn nodemon -q --watch \"src\" --ext \"*\" --exec \"cls && yarn start\"",
    "deploy": "node src/deploy.js",
    "build": "yarn pkg . --out-dir dist"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "discord.js": "^14.11.0",
    "openai": "^3.3.0"
  }
}
